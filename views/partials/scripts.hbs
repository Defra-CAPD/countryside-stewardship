{{#if eligible}}
<script>
  
  
  // Are you eligible?

  $(function() {

       
    $('input[type=submit]').on('click', function() {
      
      
      var $radiosQty     = $("input[type=radio][value='Yes']").length, 
          $radiosChecked = $("input[type=radio][value='Yes']:checked").length;
      

      if ($radiosChecked === $radiosQty) {        
        
        window.location.href = '/eligibility/eligible/';      
        
      } else {        
        
        window.location.href = '/eligibility/noteligible/';       
        
      }
      
      
      return false;
            
      
    });
       
    
  });
  

</script>
{{/if}}


{{#if terms}}
<script>
  
  
  // Have you accepted terms and conditions?

  $(function() {


    var form     = $('#form-terms'),
        button   = form.find('.button'),
        checkbox = form.find('input:checkbox');
    
    
    // Initially disable the submit button
    
    button.attr('disabled', true);
    
    
    // Change submit button disabled state
    
    $('#checkbox-terms-and-conditions').change(function () {
      
      if ($(this).is(':checked')) {
        
        button.attr('disabled', false);
        
      } else {
        
        button.attr('disabled', true);
        
      }      
        
    });
       
    
  });
  

</script>
{{/if}}


